<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.CardsListFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <FrameLayout
           android:id="@+id/fm_top"
           android:layout_width="match_parent"
           android:layout_alignParentTop="true"
           android:background="@drawable/bg_gradient"
           android:layout_height="@dimen/_140sdp">

       </FrameLayout>
       <ScrollView
           android:id="@+id/scroll"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:visibility="visible"
           android:layout_below="@+id/toolbarid"
           android:fillViewport="true">

           <RelativeLayout
               android:id="@+id/container"
               android:layout_width="match_parent"
               android:visibility="visible"
               android:layout_height="match_parent">

               <FrameLayout
                   android:id="@+id/fm"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_170sdp"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:layout_marginRight="@dimen/_10sdp"
                   android:background="@drawable/bg_card"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginLeft="@dimen/_15sdp"
                       android:layout_marginTop="@dimen/_20sdp"
                       android:layout_marginRight="@dimen/_15sdp"

                       android:orientation="vertical">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_gravity="center"
                           android:orientation="horizontal"
                           android:weightSum="4">


                           <TextView
                               android:id="@+id/cardNo"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:fontFamily="@font/avenir_roman"
                               android:gravity="center"
                               android:text="XXXX"
                               android:textColor="@color/black"
                               android:textSize="@dimen/_15sdp" />


                           <TextView

                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"

                               android:layout_weight="1"
                               android:fontFamily="@font/avenir_roman"
                               android:gravity="center"
                               android:text="XXXX"
                               android:textColor="@color/black"
                               android:textSize="@dimen/_15sdp" />

                           <TextView

                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="@dimen/_10sdp"
                               android:layout_weight="1"
                               android:fontFamily="@font/avenir_roman"
                               android:gravity="center"
                               android:text="XXXX"
                               android:textColor="@color/black"
                               android:textSize="@dimen/_15sdp" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:fontFamily="@font/avenir_roman"
                               android:gravity="center"
                               android:text="XXXX"
                               android:textColor="@color/black"
                               android:textSize="@dimen/_15sdp" />
                           <!--<ImageView-->
                           <!--android:layout_width="match_parent"-->
                           <!--android:layout_height="wrap_content"-->

                           <!--android:layout_gravity="center_horizontal" />-->

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="@dimen/_10sdp"
                           android:orientation="horizontal">

                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="@dimen/_15sdp"
                               android:layout_marginTop="@dimen/_10sdp"
                               android:orientation="vertical">

                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"

                                   android:layout_weight="1"
                                   android:fontFamily="@font/avenir_black"


                                   android:text="@string/card_holder"
                                   android:textColor="@color/gray_light"
                                   android:textSize="@dimen/_8sdp" />


                               <TextView
                                   android:id="@+id/holdernametv"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="1"
                                   android:fontFamily="@font/avenir_black"
                                   android:gravity="center"
                                   android:text="XXXXXX XXXXXX"

                                   android:textColor="@color/black"
                                   android:textSize="@dimen/_12sdp" />
                           </LinearLayout>


                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/_10sdp"
                               android:layout_marginRight="@dimen/_15sdp"
                               android:background="@color/white"
                               android:gravity="right"
                               android:orientation="vertical">

                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="1"
                                   android:fontFamily="@font/avenir_black"
                                   android:gravity="right"


                                   android:text="EXP DATE"
                                   android:textColor="@color/gray_light"
                                   android:textSize="@dimen/_8sdp" />


                               <TextView
                                   android:id="@+id/exp_date"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="1"
                                   android:fontFamily="@font/avenir_black"
                                   android:gravity="right"
                                   android:text="XX/XX"

                                   android:textColor="@color/black"
                                   android:textSize="@dimen/_12sdp" />
                           </LinearLayout>
                       </LinearLayout>
                   </LinearLayout>

               </FrameLayout>

               <TextView
                   android:id="@+id/des"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/fm"
                   android:autoText="true"
                   android:fontFamily="@font/avenir_medium"
                   android:gravity="center"
                   android:padding="@dimen/_15sdp"
                   android:text="@string/currently_you_have_no_cards_saved_add_your_debit_or_credit_cardsfor_faster_payments"
                   android:textColor="#2e3333"
                   android:textSize="@dimen/_15sdp"
                   android:textStyle="bold" />



           </RelativeLayout>

       </ScrollView>
       <android.support.v4.widget.SwipeRefreshLayout
           android:id="@+id/swipreferesh"
           android:layout_width="match_parent"
           android:layout_above="@+id/add_new_cardll"
           android:layout_height="wrap_content"
           >
       <android.support.v7.widget.RecyclerView
           android:id="@+id/cardList"
           android:visibility="gone"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginLeft="@dimen/_10sdp"
           android:layout_marginRight="@dimen/_10sdp"
           android:layout_marginTop="@dimen/_20sdp"

           android:background="@android:color/transparent"/>
       </android.support.v4.widget.SwipeRefreshLayout>
       <LinearLayout
           android:id="@+id/add_new_cardll"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:gravity="center"
           android:background="@android:color/transparent"
           android:paddingBottom="@dimen/_5sdp"
           android:paddingTop="@dimen/_5sdp"
           android:visibility="visible">

           <TextView
               android:id="@+id/add_new_card"
               android:layout_width="@dimen/_150sdp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/fm"
               android:background="@drawable/btn_orancle_corn_30"
               android:fontFamily="@font/avenir_medium"
               android:gravity="center"
               android:padding="@dimen/_5sdp"
               android:text="@string/add_new_card"
               android:textColor="@color/white"
               android:textSize="@dimen/_13sdp"
               android:textStyle="bold" />

       </LinearLayout>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:background="#9d9d9c"
           android:fontFamily="@font/avenir_medium"
           android:gravity="center"
           android:padding="@dimen/_10sdp"
           android:visibility="gone"
           android:text="Done"
           android:textColor="@color/white"
           android:textSize="@dimen/_18sdp" />
   </RelativeLayout>

</FrameLayout>
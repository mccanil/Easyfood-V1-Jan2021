<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_black"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:text="John Smith"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp">

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/ratingBar1"
            style="?android:attr/ratingBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:isIndicator="true"
            android:scaleX=".7"
            android:scaleY=".7"
            android:layout_marginStart="@dimen/_minus25sdp"
            android:stepSize="0.1" />

        <ImageView
            android:id="@+id/rat_1"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/rating_star"
            android:padding="@dimen/_10sdp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/rat_2"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toRightOf="@+id/rat_1"
            android:background="@drawable/rating_star"
            android:padding="@dimen/_10sdp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/rat_3"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toRightOf="@+id/rat_2"
            android:background="@drawable/rating_star"
            android:padding="@dimen/_10sdp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/rat_4"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toRightOf="@+id/rat_3"
            android:background="@drawable/rating_star"
            android:padding="@dimen/_10sdp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/rat_5"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_toRightOf="@+id/rat_4"
            android:background="@drawable/rating_star"
            android:padding="@dimen/_10sdp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:fontFamily="@font/avenir_roman"
            android:text="12/02/2019"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />


    </RelativeLayout>


</LinearLayout>
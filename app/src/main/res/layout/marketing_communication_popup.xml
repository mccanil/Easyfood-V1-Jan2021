<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_15sdp"
    android:background="@drawable/cardview"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/cross_tv"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/circle_gray"
        android:padding="@dimen/_10sdp"
        android:src="@mipmap/x_copy"

        />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fm"


        android:fontFamily="@font/avenir_black"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="Marketing Communication"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold" />





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:autoText="true"
        android:fontFamily="@font/avenir_medium"
        android:gravity="center"
android:paddingRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:text="@string/marketing_communicatio_desc"
        android:textColor="@color/descolor"
        style="@style/TextAppearance.AppCompat.Medium"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">
        <TextView
            android:id="@+id/dont_allow"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/fm"

            android:fontFamily="@font/avenir_black"
            android:gravity="center"
            android:background="@drawable/btn_grey_corn30"
            android:padding="@dimen/_5sdp"
            android:text="Donâ€™t Allow"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textColor="@color/white"
            style="@style/TextAppearance.AppCompat.Medium"
            />
        <TextView
            android:id="@+id/allow"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/fm"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/avenir_black"
            android:gravity="center"
            android:background="@drawable/rounded_orange"
            android:padding="@dimen/_5sdp"
            android:text="Allow"
            android:textColor="@color/white"
            style="@style/TextAppearance.AppCompat.Medium"

            />

    </LinearLayout>

</LinearLayout>
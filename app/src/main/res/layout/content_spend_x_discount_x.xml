<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".spend_x_get_x_discount.view.impl.SpendXgetXdiscountActivity"
    tools:showIn="@layout/activity_spend_xget_xdiscount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_restaurent_name_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/ellipse_yellow"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/order_circle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_extra_bold"
                    android:text="Taste Harmony Restaurant"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/raleway_regular"
                    android:text="B66 4JN"
                    android:textColor="@color/txt_order"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_delevery_on_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center_vertical|end"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/close"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/border_two"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">


                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/txt_open"
                    app:srcCompat="@drawable/circle_inactive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/raleway_semi_bold"
                    android:text="Close"
                    android:textColor="@color/txt_open"
                    android:textSize="@dimen/_13sdp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/open"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/border_two"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semi_bold"
                    android:text="Open"
                    android:textColor="@color/txt_open"
                    android:textSize="@dimen/_13sdp"/>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/txt_open"
                    app:srcCompat="@drawable/circle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_delevery"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/border_two"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semi_bold"
                    android:text="Home Delivery"
                    android:textSize="@dimen/_13sdp"/>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    app:srcCompat="@drawable/circle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_delevery_off"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/border_two"
                android:gravity="center"

                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:srcCompat="@drawable/circle_inactive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/raleway_semi_bold"
                    android:text="Home Delivery"
                    android:textSize="@dimen/_13sdp"/>
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f3f3f3"
                    android:fontFamily="@font/raleway_bold"
                    android:gravity="left|start"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="You can set the purchase brackets and the discount percentage."
                    android:textColor="@color/txt_orderid"
                    android:textSize="@dimen/_13sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_bold"
                    android:gravity="left|start"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Purchase brackets and discount percentages:"
                    android:textColor="@color/bg_login_start"
                    android:textSize="@dimen/_13sdp"/>

                <EditText
                    android:id="@+id/edit_offer_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/rectangle_edit"
                    android:ems="10"
                    android:fontFamily="@font/raleway_semi_bold"
                    android:hint="*Offer Title"
                    android:inputType="textCapSentences"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:text=""
                    android:textColor="#656565"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/offer_descripton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/rectangle_edit"
                    android:ems="10"
                    android:fontFamily="@font/raleway_semi_bold"
                    android:hint="*Offer Description"
                    android:inputType="textCapSentences"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:text=""
                    android:textColor="#656565"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_bold"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Set the start and end dates for  this offer"
                    android:textColor="#656565"
                    android:textSize="@dimen/_14sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btn_start_date"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/border_six"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/startDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:gravity="center"
                            android:text="Start Date"
                            android:textColor="#656565"
                            android:textSize="@dimen/_10sdp" />
                        <Button
                            android:id="@+id/button3"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/calendar_with_a_clock_time"
                            android:text="" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_end_date"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/border_six"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/endDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:gravity="center"
                            android:text="End Date"
                            android:textColor="#656565"
                            android:textSize="@dimen/_10sdp" />
                        <Button
                            android:id="@+id/button5"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/calendar_with_a_clock_time"
                            android:text="" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="#f3f3f3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/raleway_bold"
                            android:gravity="left|start"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:text="* Available Days:"
                            android:textColor="@color/bg_login_start"
                            android:textSize="@dimen/_14sdp" />

                        <CheckBox
                            android:id="@+id/checkbox_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|end"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:backgroundTint="@color/bg_login_start"
                            android:buttonTint="@color/bg_login_start"
                            android:text="All Days"
                            android:fontFamily="@font/raleway_bold"
                            android:textColor="@color/bg_login_start"
                            android:textSize="@dimen/_13sdp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#707070" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="start|left"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkbox_mon"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|end"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:backgroundTint="#656565"
                            android:buttonTint="#656565"
                            android:text="Mon"
                            android:textColor="#656565"
                            android:textSize="@dimen/_16sdp" />

                        <CheckBox
                            android:id="@+id/checkbox_tue"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|end"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:backgroundTint="#656565"
                            android:buttonTint="#656565"
                            android:text="Tue"
                            android:textColor="#656565"
                            android:textSize="@dimen/_16sdp" />

                        <CheckBox
                            android:id="@+id/checkbox_wed"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|end"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:backgroundTint="#656565"
                            android:buttonTint="#656565"
                            android:text="Wed"
                            android:textColor="#656565"
                            android:textSize="@dimen/_16sdp" />

                        <CheckBox
                            android:id="@+id/checkbox_thu"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|end"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:backgroundTint="#656565"
                            android:buttonTint="#656565"
                            android:text="Thu"
                            android:textColor="#656565"
                            android:textSize="@dimen/_16sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:gravity="start|left"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkbox_fri"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|end"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:backgroundTint="#656565"
                            android:buttonTint="#656565"
                            android:text="Fri"
                            android:textColor="#656565"
                            android:textSize="@dimen/_16sdp" />

                        <CheckBox
                            android:id="@+id/checkbox_sat"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|end"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:backgroundTint="#656565"
                            android:buttonTint="#656565"
                            android:text="Sat"
                            android:textColor="#656565"
                            android:textSize="@dimen/_16sdp" />

                        <CheckBox
                            android:id="@+id/checkbox_sun"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|end"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:backgroundTint="#656565"
                            android:buttonTint="#656565"
                            android:text="Sun"
                            android:textColor="#656565"
                            android:textSize="@dimen/_16sdp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_bold"
                    android:gravity="left|start"
                    android:padding="@dimen/_8sdp"
                    android:text="Offer Time Slot*"
                    android:textColor="@color/txt_orderid"
                    android:textSize="@dimen/_13sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/active_from"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/border_six"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/activeFrom"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:gravity="center"
                            android:text="Active From"
                            android:textColor="#656565"
                            android:textSize="@dimen/_10sdp" />

                        <Button
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/ic_access_time_black_24dp"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/active_to"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/border_six"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/activeTo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:gravity="center"
                            android:text="Active To"
                            android:textColor="#656565"
                            android:textSize="@dimen/_10sdp" />

                        <Button
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/ic_access_time_black_24dp"
                            android:text="" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="#f3f3f3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/raleway_bold"
                            android:gravity="center"
                            android:text="Between £:"
                            android:textColor="#656565"
                            android:textSize="@dimen/_13sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/raleway_bold"
                            android:gravity="center"
                            android:text="and £"
                            android:textColor="#656565"
                            android:textSize="@dimen/_13sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/raleway_bold"
                            android:gravity="center"
                            android:text="Give Discount"
                            android:textColor="#656565"
                            android:textSize="@dimen/_13sdp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:fontFamily="@font/raleway_bold"
                            android:gravity="center"
                            android:text="%"
                            android:textColor="#656565"
                            android:textSize="@dimen/_14sdp"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edit_between"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle_edit"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:textColor="#656565"
                            android:textSize="@dimen/_13sdp"/>

                        <EditText
                            android:id="@+id/edit_and"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle_edit"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:textColor="#656565"
                            android:textSize="@dimen/_13sdp"/>

                        <EditText
                            android:id="@+id/edit_give_discount"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle_edit"
                            android:ems="10"
                            android:maxLength="3"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:textColor="#656565"
                            android:textSize="@dimen/_13sdp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

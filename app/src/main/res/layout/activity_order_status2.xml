<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".order_status.OrderStatusActivity">

    <RelativeLayout
        android:id="@+id/toolbarhide"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_gradient"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_back_black_24dp"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/avenir_black"
            android:gravity="center"
            android:text="Order progress"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipreferesh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/mainRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gradient"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_40sdp">

                        <FrameLayout
                            android:id="@+id/fl"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp">

                            <ImageView
                                android:id="@+id/bikeimg"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:padding="@dimen/_10sdp"
                                android:src="@drawable/ic_order_status_0" />

                            <ImageView
                                android:id="@+id/imagehot"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:background="@drawable/circle_shape"
                                android:padding="@dimen/_10sdp"
                                android:src="@drawable/hot"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/imageright"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:background="@drawable/circle_shape"
                                android:padding="@dimen/_10sdp"
                                android:src="@drawable/right"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/imagedeleverd"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:background="@drawable/circle_shape"
                                android:padding="@dimen/_10sdp"
                                android:src="@drawable/deleveredimg"
                                android:visibility="gone" />

                        </FrameLayout>


                        <TextView
                            android:id="@+id/disTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/fl"
                            android:fontFamily="@font/avenir_black"
                            android:gravity="center"
                            android:text="@string/order_title_0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/ll_head"
                        android:layout_gravity="center"
                        android:background="#E5E8E8"
                        android:paddingTop="@dimen/_45sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/ll_bottom"
                            android:layout_centerInParent="true"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv.AcceptedText"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_toLeftOf="@+id/tv_1"
                                android:fontFamily="@font/avenir_black"
                                android:gravity="center"
                                android:text="@string/accepted"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/tv_1"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/border_circle_white">

                                <FrameLayout
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp">

                                    <ImageView
                                        android:id="@+id/acceptImg"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:padding="@dimen/_10sdp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/right"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/acceptTv"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:fontFamily="@font/avenir_black"
                                        android:gravity="center"
                                        android:text="1"
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold"
                                        android:visibility="visible" />
                                </FrameLayout>
                            </LinearLayout>


                            <View
                                android:id="@+id/view1"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_below="@+id/tv_1"
                                android:layout_centerHorizontal="true"
                                android:background="@color/colorPrimaryDark" />

                            <TextView
                                android:id="@+id/tv.PreparedText"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_below="@+id/view1"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_toRightOf="@+id/tv_2"
                                android:fontFamily="@font/avenir_black"
                                android:gravity="center"
                                android:text="@string/prepared"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/tv_2"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_below="@+id/view1"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/border_circle_white">

                                <FrameLayout
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp">

                                    <ImageView
                                        android:id="@+id/preparedImg"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:background="@drawable/circle_orange"
                                        android:padding="@dimen/_10sdp"
                                        android:src="@drawable/right"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/preparedTv"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:fontFamily="@font/avenir_black"
                                        android:gravity="center"
                                        android:text="2"
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />
                                </FrameLayout>

                            </LinearLayout>

                            <View
                                android:id="@+id/view2"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_below="@+id/tv_2"
                                android:layout_centerHorizontal="true"
                                android:background="@color/colorPrimaryDark" />


                            <TextView
                                android:id="@+id/tv.OnTheWayText"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_below="@+id/view2"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_toLeftOf="@+id/tv_3"
                                android:fontFamily="@font/avenir_black"
                                android:gravity="center"
                                android:text="@string/on_the_way"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/tv_3"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_below="@+id/view2"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/border_circle_white">

                                <FrameLayout
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp">

                                    <ImageView
                                        android:id="@+id/onwayImg"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:background="@drawable/circle_orange"
                                        android:padding="@dimen/_10sdp"
                                        android:src="@drawable/right"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/onwayTv"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:fontFamily="@font/avenir_black"
                                        android:gravity="center"
                                        android:text="3"
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />
                                </FrameLayout>
                            </LinearLayout>

                            <View
                                android:id="@+id/view3"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_below="@+id/tv_3"
                                android:layout_centerHorizontal="true"
                                android:background="@color/gray_light" />


                            <TextView
                                android:id="@+id/tv.DeliveredText"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_below="@+id/view3"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_toRightOf="@+id/tv_4"
                                android:fontFamily="@font/avenir_black"
                                android:gravity="center"
                                android:text="@string/delivered"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/tv_4"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_below="@+id/view3"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/border_circle_white">

                                <FrameLayout
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp">

                                    <ImageView
                                        android:id="@+id/deliveredImg"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:background="@drawable/circle_orange"
                                        android:padding="@dimen/_10sdp"
                                        android:src="@drawable/right"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/deliveredTv"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:fontFamily="@font/avenir_black"
                                        android:gravity="center"
                                        android:text="4"
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />
                                </FrameLayout>

                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ll_bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/rounded_white"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv.orderId"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/avenir_black"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:text="Order Id:"
                                    android:textColor="@color/gray_light"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/tv.payMode"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/avenir_black"
                                    android:gravity="right"
                                    android:inputType="textCapCharacters"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:paddingRight="@dimen/_10sdp"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:text="Payment Mode: Cash"
                                    android:textColor="@color/gray_light"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv.timeStamp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/edittextMobile"
                                android:fontFamily="@font/avenir_medium"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text=""
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_10sdp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv.OrderAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/edittextMobile"
                                    android:fontFamily="@font/avenir_medium"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:text="0.00"
                                    android:textColor="@color/gray_light"
                                    android:textSize="@dimen/_10sdp" />


                                <TextView
                                    android:id="@+id/callRestaurant"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/edittextMobile"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:fontFamily="@font/avenir_medium"
                                    android:gravity="right"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:text="@string/call_restaurant"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/_10sdp"
                                    android:visibility="invisible" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <FrameLayout
                        android:id="@+id/fm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_120sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:background="@drawable/rounded_white">

                        <TextView
                            android:id="@+id/tv.DetailsMsg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edittextMobile"
                            android:layout_margin="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_medium"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/order_title_Details_0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </FrameLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/close_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/close"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20sdp" />

            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".add_card.AddNewCardActivity">

    <RelativeLayout
        android:id="@+id/toolbarhide"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_back_black_24dp"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/avenir_black"
            android:gravity="center"
            android:text="Add New Card"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/menuId"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/ic_menu_black_24dp"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:background="@drawable/bg_gradient"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/top"
                android:background="@color/white"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nameId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_22sdp"
                            android:layout_marginLeft="@dimen/_22sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_marginEnd="@dimen/_22sdp"
                            android:layout_marginRight="@dimen/_22sdp"
                            android:autoText="true"
                            android:fontFamily="@font/avenir_medium"
                            android:gravity="center"
                            android:text="Please add your debit/credit card details below"
                            android:textColor="@color/descolor"
                            android:textSize="@dimen/_14sdp" />


                        <EditText
                            android:id="@+id/cardholder_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_22sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_22sdp"
                            android:background="@mipmap/grey_category_copy"
                            android:ems="10"
                            android:fontFamily="@font/avenir_medium"
                            android:hint="Name on Card (required)"
                            android:inputType="text"
                            android:maxLength="50"
                            android:padding="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_14sdp" />


                        <EditText
                            android:id="@+id/card_number"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_22sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_22sdp"
                            android:background="@mipmap/grey_category_copy"
                            android:ems="10"
                            android:fontFamily="@font/avenir_medium"
                            android:hint="Card Number (required)"
                            android:inputType="number"
                            android:maxLength="19"
                            android:padding="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_14sdp" />


                        <EditText
                            android:id="@+id/ccv_et"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_22sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_22sdp"
                            android:background="@mipmap/grey_category_copy"
                            android:ems="10"
                            android:fontFamily="@font/avenir_medium"
                            android:hint="CVC Code (required)"
                            android:inputType="number"
                            android:padding="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_14sdp"
                            android:visibility="gone" />


                        <LinearLayout
                            android:id="@+id/lll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <EditText
                                android:id="@+id/expire_date"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@mipmap/grey_category_copy"
                                android:ems="10"
                                android:fontFamily="@font/avenir_medium"
                                android:gravity="center_horizontal"
                                android:hint="MM"
                                android:inputType="number"
                                android:maxLength="2"
                                android:padding="@dimen/_5sdp"
                                android:singleLine="true"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_14sdp" />

                            <EditText
                                android:id="@+id/expire_year"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@mipmap/grey_category_copy"
                                android:ems="10"
                                android:fontFamily="@font/avenir_medium"
                                android:gravity="center_horizontal"
                                android:hint="YYYY"
                                android:inputType="number"
                                android:maxLength="4"
                                android:padding="@dimen/_5sdp"
                                android:singleLine="true"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_14sdp" />

                            <EditText
                                android:id="@+id/cvv_no"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@mipmap/grey_category_copy"
                                android:ems="10"
                                android:fontFamily="@font/avenir_medium"
                                android:gravity="center_horizontal"
                                android:hint="CVC"
                                android:inputType="numberPassword"
                                android:maxLength="3"
                                android:padding="@dimen/_5sdp"
                                android:singleLine="true"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_14sdp"
                                android:visibility="visible" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/billing_post"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_22sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_22sdp"
                            android:background="@mipmap/grey_category_copy"
                            android:ems="10"
                            android:focusable="false"
                            android:fontFamily="@font/avenir_medium"
                            android:hint="Billing Address Postcode (required)"
                            android:inputType="text"
                            android:padding="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_14sdp" />


                        <CheckBox
                            android:id="@+id/store_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:buttonTint="@color/orange"
                            android:text="Do you want to save this card for future payments?"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/ll"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/conformTv"
                                android:layout_width="@dimen/_150sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/rounded_orange"
                                android:fontFamily="@font/avenir_medium"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/confirm"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>


            </LinearLayout>

            <FrameLayout
                android:id="@+id/fm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/bg_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/cardNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/avenir_roman"
                            android:gravity="center"
                            android:text="XXXX"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/avenir_roman"
                            android:gravity="center"
                            android:text="XXXX"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/avenir_roman"
                            android:gravity="center"
                            android:text="XXXX"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/avenir_roman"
                            android:gravity="center"
                            android:text="XXXX"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/avenir_black"
                                android:text="@string/card_holder"
                                android:textColor="@color/gray_light"
                                android:textSize="@dimen/_8sdp" />

                            <TextView
                                android:id="@+id/holdernametv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/avenir_black"
                                android:gravity="center"
                                android:text="XXXXXX XXXXXX"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@color/white"
                            android:gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/avenir_black"
                                android:gravity="right"
                                android:text="EXP DATE"
                                android:textColor="@color/gray_light"
                                android:textSize="@dimen/_8sdp" />

                            <TextView
                                android:id="@+id/exp_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/avenir_black"
                                android:gravity="right"
                                android:text="XX/XX"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
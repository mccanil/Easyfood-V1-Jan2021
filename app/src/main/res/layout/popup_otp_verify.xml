<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_90sdp"
        android:elevation="@dimen/_4sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_4sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/sign_up_btn_dialog">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_20sdp">

                    <!-- TODO: Update blank fragment layout -->


                    <ImageView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:background="@drawable/mobile" />


                    <TextView
                        android:id="@+id/tv_mobileEnding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:autoText="true"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/avenir_roman"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="dsbdsfb"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp" />


                    <EditText
                        android:id="@+id/pin_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"

                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@mipmap/grey_category_copy"
                        android:ems="10"
                        android:fontFamily="@font/avenir_medium"
                        android:hint="Enter 4 digit code"
                        android:inputType="number"
                        android:maxLength="4"
                        android:padding="@dimen/_5sdp"
                        android:textAllCaps="true"
                        android:textColor="#9d9d9c"
                        android:textSize="@dimen/_13sdp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoText="true"
                            android:clickable="true"
                            android:fontFamily="@font/avenir_roman"
                            android:gravity="center"
                           android:paddingStart="@dimen/_5sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="Didnâ€™t receive it?"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/send_again"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoText="true"
                            android:clickable="true"
                            android:fontFamily="@font/avenir_roman"
                            android:gravity="center"
                            android:paddingEnd="@dimen/_5sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text=" Send again"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>


                </LinearLayout>

            </ScrollView>

            <ImageView
                android:id="@+id/cross_tv"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/circle_gray"
                android:padding="@dimen/_7sdp"
                android:src="@mipmap/x_copy" />


            <TextView
                android:id="@+id/sign_up_btn_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_with_bottom_round"
                android:fontFamily="@font/avenir_medium"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="Verify"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
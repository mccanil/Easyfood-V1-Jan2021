<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_15sdp"
    android:background="@drawable/cardview"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/cross_tv"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/_5sdp"

        android:background="@drawable/circle_gray"
        android:padding="@dimen/_10sdp"
        android:src="@mipmap/x_copy"

        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fm"


        android:fontFamily="@font/avenir_black"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="Marketing Communication"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:autoText="true"
        android:fontFamily="@font/avenir_medium"
        android:gravity="center"
        android:padding="@dimen/_15sdp"
        android:text="We’d like to send you discount coupons, exclusive offers and promotions by email, SMS and push notifications. You can change these prefrerences anytime within this app."
        android:textColor="@color/descolor"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fm"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:visibility="visible"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fm"

            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/rounded"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:id="@+id/not_allow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fm"


                android:fontFamily="@font/avenir_black"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Don’t Allow"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/rounded_orange"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:id="@+id/allow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fm"

                android:fontFamily="@font/avenir_black"
                android:gravity="center"

                android:padding="@dimen/_5sdp"
                android:text="Allow"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_15sdp"
    android:background="@drawable/cardview"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/cross_tv"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/_5sdp"

        android:background="@drawable/circle_gray"
        android:padding="@dimen/_10sdp"
        android:src="@mipmap/x_copy"

        />


    <ImageView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginLeft="@dimen/_10sdp"

        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:background="@drawable/voucher_expired_code" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fm"


        android:fontFamily="@font/avenir_black"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="@string/voucher_code_n_has_now_expired"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold" />





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:autoText="true"
        android:fontFamily="@font/avenir_medium"
        android:gravity="center"
        android:padding="@dimen/_15sdp"
        android:text="@string/unfortunately_discount_code_has_expired_please_try_again_with_a_valid_code"
        android:textColor="@color/descolor"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/fm"

            android:fontFamily="@font/avenir_medium"
            android:gravity="center"
            android:background="@drawable/rounded_orange"
            android:padding="@dimen/_5sdp"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            />

    </LinearLayout>

</LinearLayout>
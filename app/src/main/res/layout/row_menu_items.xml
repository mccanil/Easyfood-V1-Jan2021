<?xml version="1.0" encoding="utf-8"?>
<com.easyfoodvone.menu.adapter.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="@dimen/_1sdp"
    android:padding="@dimen/_1sdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/_100sdp"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_below="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/_12sdp"
        android:maxLines="1"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:ellipsize="end"
        android:textColor="#1a1a1a"
        android:fontFamily="@font/raleway_semi_bold"
        android:text="NA" />
    <TextView
        android:id="@+id/txt_items"
        android:layout_below="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/_10sdp"
        android:textColor="#3a3534"
        android:fontFamily="@font/raleway_regular"
        android:text="NA" />
</com.easyfoodvone.menu.adapter.SquareLayout>
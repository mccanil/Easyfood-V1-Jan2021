<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp"
    android:layout_height="wrap_content">
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/white"
android:gravity="left|start"
android:orientation="vertical">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/_14sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_20sdp"
    android:fontFamily="@font/raleway_extra_bold"
    android:textColor="@color/bg_login_start"
    android:text="Edit - Category Name" />

<TextView
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginStart="@dimen/_20sdp"
    android:textSize="@dimen/_18sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:fontFamily="@font/raleway_bold"
    android:textColor="#656565"
    android:text="Category Name:" />

<EditText
    android:id="@+id/menuCatName"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="wrap_content"
    android:ems="10"
    android:padding="@dimen/_4sdp"
    android:paddingStart="@dimen/_10sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginStart="@dimen/_20sdp"
    android:background="@drawable/border_six"
    android:textColor="#656565"
    android:enabled="true"
    android:inputType="textPersonName"
    android:text="" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:layout_marginTop="@dimen/_5sdp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/raleway_bold"
        android:textColor="#656565"
        android:text="Active/Inactive " />

    <LinearLayout
        android:id="@+id/btn_item_inactive"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/border_switch_grey"
        android:gravity="left|start|center_vertical"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:visibility="gone"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/circle_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_item_active"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/border_green_switch"
        android:gravity="end|right|center_vertical"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:visibility="visible"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/circle_white" />
    </LinearLayout>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginTop="@dimen/_20sdp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="@dimen/_30sdp"
        android:textAllCaps="false"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:background="#70FF6600"
        android:textColor="@color/white"
        android:text="Update" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/open_sans_bold"
        android:layout_height="@dimen/_30sdp"
        android:background="@color/grey_bg"
        android:textAllCaps="false"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:text="Cancel" />
</LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>



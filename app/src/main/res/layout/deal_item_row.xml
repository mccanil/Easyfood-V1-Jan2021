            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_black"
            android:text="Meal Deal 1"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txt_offer_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dealNameId"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/avenir_medium"
            android:text="1 Any 2 x 10” Pizzas 2 Chips 2 Bread"
            android:textColor="@color/descolor"
            android:textSize="@dimen/_9sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txt_offer_items"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="bottom"
            android:orientation="vertical">


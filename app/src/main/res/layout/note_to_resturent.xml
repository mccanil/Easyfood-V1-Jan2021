<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llNotePad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_15sdp"
    android:background="@drawable/cardview"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/cross_tv"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/_5sdp"

        android:background="@drawable/circle_gray"
        android:padding="@dimen/_10sdp"
        android:src="@mipmap/x_copy" />


    <ImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center"

        android:layout_marginLeft="@dimen/_10sdp"
        android:adjustViewBounds="true"
        android:background="@drawable/note_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fm"


        android:fontFamily="@font/avenir_black"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="Add note to your order"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_14sdp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:autoText="true"
        android:fontFamily="@font/avenir_medium"
        android:gravity="center"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:text="If you want to include any information for the restaurant, (eg. door bell doesnâ€™t work,please knock the door) then please add your note below."
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp" />

    <EditText
        android:id="@+id/desIdEt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@mipmap/grey_category_copy"
        android:ems="10"
        android:fontFamily="@font/avenir_medium"
        android:gravity="left"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:maxLength="240"
        android:padding="@dimen/_5sdp"
        android:singleLine="false"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:id="@+id/tv_countText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fm"
        android:layout_marginRight="@dimen/_5sdp"
        android:fontFamily="@font/avenir_medium"
        android:gravity="right"
        android:padding="@dimen/_5sdp"
        android:text="0/240"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_10sdp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/okTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fm"
            android:background="@drawable/rounded_orange"
            android:fontFamily="@font/avenir_black"
            android:gravity="center"
            android:paddingStart="@dimen/_45sdp"
            android:paddingEnd="@dimen/_45sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"

            android:text="@string/add_note"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>

</LinearLayout>
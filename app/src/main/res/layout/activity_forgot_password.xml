<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context=".login.view.impl.LoginActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:src="@drawable/logo_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/raleway_semi_bold"
            android:text="@string/forgot_your_password" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_grey_two"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/raleway_regular"
            android:text="@string/forgot_text" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/rectangle"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/raleway_regular"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/border"
                    android:inputType="textPersonName"
                    android:hint="@string/enter_your_email_address"
                    android:text="" />
            </LinearLayout>



        <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_35sdp"
               android:orientation="horizontal">
               <Button
                   android:id="@+id/resetPassword"
                   android:layout_width="@dimen/_80sdp"
                   android:layout_height="@dimen/_35sdp"
                   android:background="@drawable/rectangle_btn_color"
                   android:layout_marginRight="@dimen/_2sdp"
                   android:layout_marginEnd="@dimen/_2sdp"
                   android:textSize="@dimen/_14sdp"
                   android:textAllCaps="false"
                   android:fontFamily="@font/raleway_bold"
                   android:textColor="@color/white"
                   android:text="Reset" />

               <Button
                   android:id="@+id/tryAgain"
                   android:layout_width="@dimen/_80sdp"
                   android:layout_height="@dimen/_35sdp"
                   android:background="@drawable/rectangle_btn_white"
                   android:layout_marginLeft="@dimen/_2sdp"
                   android:layout_marginStart="@dimen/_2sdp"
                   android:textSize="@dimen/_14sdp"
                   android:fontFamily="@font/raleway_bold"
                   android:textAllCaps="false"
                   android:textColor="@color/black"
                   android:text="Cancel" />
           </LinearLayout>
    </LinearLayout>


</LinearLayout>
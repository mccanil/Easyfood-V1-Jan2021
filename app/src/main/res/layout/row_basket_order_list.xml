<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingRight="@dimen/_15sdp">


        <LinearLayout
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/white_rectangle_no"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/items_count"
                android:layout_width="32dp"
                android:layout_height="@dimen/_18sdp"
                android:layout_below="@+id/fm"
                android:layout_gravity="center"
                android:fontFamily="@font/avenir_black"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />


        </LinearLayout>



        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:fontFamily="@font/avenir_black"
            android:text="The Peri cheken Bugger"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fm"
            android:fontFamily="@font/avenir_black"
            android:gravity="right"
            android:text="£2.50"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fm"
            android:fontFamily="@font/avenir_black"
            android:gravity="right"
            android:text="£2.50"
            android:textColor="@color/descolor"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingRight="@dimen/_15sdp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/items_list"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sub_items"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_60sdp"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_height="wrap_content">


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/clickCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f4f4"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/item_remove"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/border_circle_gray"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center"
                android:background="@color/black"

                />

        </LinearLayout>

        <TextView
            android:id="@+id/item_count_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/avenir_black"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/descolor"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/item_add"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/border_circle_gray"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:fontFamily="@font/avenir_black"
                android:gravity="center"
                android:text="+"
                android:layout_marginBottom="@dimen/_8sdp"
                android:textColor="@color/descolor"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
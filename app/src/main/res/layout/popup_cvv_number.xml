<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardview"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/avenir_black"
            android:gravity="center"
            android:text="Please enter expiry date month  and year" />


        <TextView
            android:id="@+id/tv.invalid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:fontFamily="@font/avenir_black"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:text="Please enter valid expiry date" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/expire_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="@drawable/edit_bg_forgot"
                android:ems="10"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/avenir_medium"
                android:inputType="number"
                android:hint="MM"
                android:maxLength="2"
                android:text=""
                android:textColor="#706f6f"
                android:textSize="@dimen/_14sdp" />
            <EditText
                android:id="@+id/expire_year"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="@drawable/edit_bg_forgot"
                android:ems="10"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/avenir_medium"
                android:inputType="number"
                android:hint="YYYY"
                android:maxLength="4"
                android:text=""
                android:textColor="#706f6f"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/avenir_black"
            android:gravity="center"
            android:text="" />


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fm"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="horizontal"
            android:visibility="visible">


            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/fm"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_forgot_two"
                android:fontFamily="@font/avenir_medium"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/submit_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/fm"
                android:background="@drawable/bg_color_btn_forgot"
                android:fontFamily="@font/avenir_medium"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:text="Pay"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>